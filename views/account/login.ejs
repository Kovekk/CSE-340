<!-- Creating the heading using the title already provided when the page is loaded -->
<% if (title) { %>
    <h1 class="classification"><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

<!-- The message block -->
<%- messages() %>

<!-- CREATE THE LOGIN FORM -->
<form class="loginForm">
    <label>
        Email:
        <input type="email" name="email" required>
    </label>
    <label>
        Password:
        <span>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</span>
        <input type="password" name="password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
    </label>
    <input type="submit" name="submit" id="login">
    <p>No account?<a href="/account/registration">Sign-up</a></p>
</form>